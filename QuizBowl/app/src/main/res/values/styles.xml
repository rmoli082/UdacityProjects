<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/mate</item>
    </style>

    <style name="QuestionHeader">
        <item name="android:fontFamily">@font/mate_sc</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="QuestionText">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AnswerText">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/icon</item>
    </style>

    <style name="ScoreText" parent="QuestionHeader">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
