<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BasicText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBodyText</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorHeadlineText</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="AuthorText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAuthorText</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TagText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTagText</item>
    </style>

    <style name="ArticleTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

</resources>
