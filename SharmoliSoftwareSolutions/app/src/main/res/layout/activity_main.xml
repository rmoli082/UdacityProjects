<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:scaleType="centerCrop"
        android:src="@drawable/whatscoding"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#96a3d1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sharmoli Software Solutions"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:paddingRight="16dp"/>

            <TextView
                android:id="@+id/tagline_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Building software you can trust"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentRight="true"
                android:layout_below="@id/header_text"
                android:paddingRight="16dp"
                android:paddingBottom="24dp" />

            <TextView
                android:id="@+id/address_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@id/tagline_text"
                android:paddingTop="24dp"
                android:paddingLeft="16dp" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234 Sesame St.\nToronto, ON"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@id/tagline_text"
                android:layout_toRightOf="@id/address_header"
                android:paddingTop="24dp"
                android:paddingLeft="4dp" />

            <TextView
                android:id="@+id/hours_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hours:"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/address_header"
                android:paddingLeft="16dp"
                android:paddingTop="24dp" />

            <TextView
                android:id="@+id/m_to_f_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday to Friday: 8:00 to 18:00 \nSaturday and Sunday: Closed"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@id/address_header"
                android:layout_toRightOf="@id/hours_header"
                android:paddingLeft="4dp"
                android:paddingTop="24dp" />

            <ImageView
                android:id="@+id/phone_icon"
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:scaleType="centerCrop"
                android:src="@drawable/phoneicon"
                android:layout_below="@id/m_to_f_hours"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"/>

            <TextView
                android:id="@+id/local_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local: (416)555-1234 \nToll Free: (800)555-1234"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@id/m_to_f_hours"
                android:layout_toRightOf="@id/phone_icon"
                android:paddingTop="16dp"
                android:paddingLeft="8dp" />

            <ImageView
                android:id="@+id/mail_icon"
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mail"
                android:layout_below="@id/phone_icon"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"/>

            <TextView
                android:id="@+id/email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: info@sharmolisoft.com"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@id/local_phone"
                android:layout_toRightOf="@id/mail_icon"
                android:paddingTop="28dp"
                android:paddingLeft="8dp" />

            <ImageView
                android:id="@+id/website_icon"
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:scaleType="centerCrop"
                android:src="@drawable/website"
                android:layout_below="@id/mail_icon"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"/>

            <TextView
                android:id="@+id/website_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.sharmolisoft.com"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@id/email_text"
                android:layout_toRightOf="@id/website_icon"
                android:paddingTop="28dp"
                android:paddingLeft="8dp" />

            <TextView
                android:id="@+id/bio_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sharmoli Software Solutions is building software solutions you can trust. We have developed software for lots of different companies.\n\nSharmoli Software Solutions specializes in authoring the perfect software solution for your software solutioning needs. We can build your back end in Java, or develop a shiny new Android app for your enterprise.\n\nIf you're interested in connecting with a member of our team to see what Sharmoli Software Solutions can do for you, please don't hesitate to call or write using the information found above."
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@id/website_icon"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"/>


        </RelativeLayout>

    </ScrollView>

</LinearLayout>